<% layout('./layouts/boilerplate') -%>


    <div class="row justify-content-center pt-4">
        <div class="col-5 col-md-4 col-lg-3">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1528606751941-487e039da8bd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="#">
                <div class="card-body">
                    <form action="/login" class="needs-validation" novalidate method="POST">
                        <div class="form-group mb-2">
                            <label for="usernm">Username:</label>
                            <input required type="text" name="username" id="usernm" class="form-control">
                        </div>
                        <div class="form-group mb-2">
                            <label for="password">Password:</label>
                            <input required class="form-control" type="password" name="password" id="password">
                        </div>
                        <div class="row mt-2">
                            <button class="btn btn-success btn-lg btn-block">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>