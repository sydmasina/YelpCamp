<% layout('./layouts/boilerplate') -%>
    <!-- <h1 class="d-flex justify-content-center my-4">New Campground</h1> -->

    <div class="row justify-content-center pt-2">
        <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-center">Add a new Campground</h5>
                    <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data"
                        novalidate>
                        <div class="form-group mb-2">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" class="form-control" required>
                            <div class="invalid-feedback">
                                Please provide title.
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label for="locat">Location</label>
                            <input class="form-control" type="text" name="location" id="locat" required>
                            <div class="invalid-feedback">
                                Please provide location.
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label for="price">Price (R)</label>
                            <input class="form-control" type="number" name="price" id="price" required>
                            <div class="invalid-feedback">
                                Enter a valid number.
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label for="descrip">Description</label>
                            <textarea class="form-control" type="text" name="description" id="descrip"
                                required></textarea>
                            <div class="invalid-feedback">
                                Give campground description.
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label for="formFileSm" class="form-label">Add Images</label>
                            <input class="form-control form-control-sm" name="image" multiple id="formFileSm"
                                type="file" required>
                            <div class="invalid-feedback">
                                Please upload Image(s) for Campground.
                            </div>
                        </div>
                        <div class="row">
                            <button class="btn btn-success mt-2">Add Campground</button>
                        </div>
                    </form>
                </div>
            </div>

